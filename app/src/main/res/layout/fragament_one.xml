<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        android:layout_marginTop="9dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        card_view:cardElevation="1dp"
        android:layout_marginBottom="9dp"
        android:id="@+id/RestaurantInfo">
        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:id="@+id/Name"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="Name"
                    android:id="@+id/inRestaurantName"
                    android:textColor="#00aeef"
                    android:textSize="20dp"

                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:id="@+id/inRestaurantShare"
                    android:src="@drawable/ic_action_share"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:id="@+id/inRestaurantCall"
                    android:src="@drawable/call"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Name"
                android:id="@+id/area"
                android:orientation="horizontal"

                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/location"
                    android:id="@+id/inRestaurantlocation"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="area"
                    android:id="@+id/inRestaurantArea"
                    android:textSize="15dp"

                    />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_below="@+id/area"
                android:layout_margin="5dp"
                android:alpha="0.2"
                android:id="@+id/divider1"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:id="@+id/inRestaurantCuisines"
                android:orientation="horizontal"
                android:layout_below="@+id/divider1"
                android:layout_margin="5dp"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/cuisine"
                    android:id="@+id/inRestaurantCuisineImage"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cafe"
                    android:id="@+id/inRestaurantCuisineText"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:id="@+id/inRestaurantDetails"
                android:orientation="horizontal"
                android:layout_below="@+id/inRestaurantCuisines"
                android:layout_margin="5dp"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/cafe"
                    android:id="@+id/inRestaurantTypeImage"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cafe"
                    android:id="@+id/inRestaurantTypeText"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/inRestaurantDetails2"
                android:orientation="horizontal"
                android:layout_below="@+id/inRestaurantDetails"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/costfortwo"
                    android:id="@+id/inRestaurantCostForTwoImage"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:id="@+id/inRestaurantCostForTwoText"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/inRestaurantDetails3"
                android:orientation="horizontal"
                android:layout_below="@+id/inRestaurantDetails2"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/wifi"
                    android:id="@+id/inRestaurantWifiImage"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:id="@+id/inRestaurantWifiText"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/inRestaurantDetails4"
                android:orientation="horizontal"
                android:layout_below="@+id/inRestaurantDetails3"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/smoking_allowed"
                    android:id="@+id/inRestaurantSmokingImage"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:id="@+id/inRestaurantSmokingText"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/inRestaurantDetails5"
                android:orientation="horizontal"
                android:layout_below="@+id/inRestaurantDetails4"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/cards"
                    android:id="@+id/inRestaurantCardImage"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:id="@+id/inRestaurantCardText"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/inRestaurantDetails6"
                android:orientation="horizontal"
                android:layout_below="@+id/inRestaurantDetails5"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ac"
                    android:id="@+id/inRestaurantACImage"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:id="@+id/inRestaurantACText"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_below="@+id/inRestaurantDetails6"
                android:layout_margin="5dp"
                android:alpha="0.2"
                android:id="@+id/divider2"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider2"
                android:id="@+id/inRestaurantDirections"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="10"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="vertical"
                    >



                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="20dp"
                    android:id="@+id/inRestaurantFullAddressHeading"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Full address"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"

                    android:id="@+id/inRestaurantFullAddress"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/getdirections"
                        android:id="@+id/inRestaurantGetDirection"
                        />


                    </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_below="@+id/inRestaurantDirections"
                android:layout_margin="5dp"
                android:alpha="0.2"
                android:id="@+id/divider3"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:orientation="vertical"
                android:layout_below="@+id/divider3"
                android:id="@+id/inRestaurantTiming"
                >



                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Restaurant timing"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/inRestaurantTimingHeading"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Timing"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"

                    android:id="@+id/inRestaurantTimings"
                    />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_below="@+id/inRestaurantTiming"
                android:layout_margin="5dp"
                android:alpha="0.2"
                android:id="@+id/divider4"

                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:orientation="vertical"
                android:layout_below="@+id/divider4"
                android:id="@+id/inRestaurantHH"
                >



                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Happy Hours"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/inRestaurantHappyHoursHeading"

                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/inRestaurantHappyHours"
                    />
            </LinearLayout>
        </RelativeLayout>


        </android.support.v7.widget.CardView>


</RelativeLayout>
</ScrollView>